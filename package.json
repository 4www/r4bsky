{
  "name": "r4atproto",
  "version": "1.0.0",
  "description": "Radio4000 for AT Protocol - Share music tracks on the atproto network",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:cloudflare": "cp -f static/client-metadata.cloudflare.json static/client-metadata.json && npm run build",
    "build:github": "cp -f static/client-metadata.github.json static/client-metadata.json && R4_BASE='/r4atproto' npm run build",
    "preview": "vite preview",
    "deploy:wrangler": "wrangler deploy --assets=./dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/api": "^0.18.3",
    "@atproto/oauth-client-browser": "^0.3.33",
    "@tanstack/svelte-db": "^0.1.48",
    "lucide-svelte": "^0.554.0",
    "open-props": "^1.7.16"
  },
  "devDependencies": {
    "@lucide/svelte": "^0.554.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.1",
    "@vitest/ui": "^4.0.1",
    "bits-ui": "^1.8.0",
    "clsx": "^2.1.1",
    "happy-dom": "^20.0.8",
    "svelte": "^5.41.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vitest": "^4.0.1",
    "wrangler": "^4.50.0"
  }
}
